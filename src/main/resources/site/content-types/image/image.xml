<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<content-type>
  <display-name>Image</display-name>
  <super-type>base:structured</super-type>
  <form>
    <input name="binary" type="ImageSelector">
      <label>Image binary</label>
      <indexed>true</indexed>
      <occurrences minimum="1" maximum="1"/>
      <config/>
    </input>
    <input name="category" type="ContentSelector">
      <label>Category</label>
      <occurrences minimum="1" maximum="1"/>
      <config>
        <allowContentType>com.enonic.app.imagexpert:album</allowContentType>
      </config>
    </input>
  </form>
</content-type>