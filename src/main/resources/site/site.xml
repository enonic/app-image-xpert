<?xml version="1.0" encoding="UTF-8"?>
<site>
  <form>
    <input name="searchResultMax" type="Long">
      <label>Search result number maximum</label>
      <occurrences minimum="1" maximum="1"/>
      <default>50</default>
    </input>
  </form>

  <mappings>
    <mapping controller="/site/pages/image/image.js">
      <pattern>/image</pattern>
    </mapping>
    <mapping controller="/site/pages/offline/offline.js">
      <pattern>/offline</pattern>
    </mapping>
    <mapping controller="/lib/service-worker/controller.js">
      <pattern>/service-worker.js</pattern>
    </mapping>
    <mapping controller="/lib/manifest/controller.js">
      <pattern>/manifest.json</pattern>
    </mapping>
  </mappings>
</site>
